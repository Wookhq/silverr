{
	"name": "silverr",
	"private": true,
	"version": "0.0.3",
	"description": "Silverr app",
	"author": "Wookhq ORG",
	"main": "backend/electron-main.cjs",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && cross-env ELECTRON_START_URL=http://localhost:5174 node --max-old-space-size=4096 ./node_modules/electron/cli.js ./backend/electron-main.cjs\"",
		"electron:prod": "npm run build && electron ./backend/electron-main.cjs",
		"dist": "electron-builder"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/archiver": "^6.0.3",
		"concurrently": "^9.2.1",
		"cross-env": "^10.0.0",
		"daisyui": "^5.1.13",
		"electron": "^38.1.2",
		"electron-builder": "^26.0.12",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"wait-on": "^9.0.0"
	},
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "wookhq",
				"repo": "silverr"
			}
		],
		"appId": "org.wookhq.Silverr",
		"productName": "Silverr",
		"electronVersion": "38.1.2",
		"nodeGypRebuild": false,
		"files": [
			"backend/electron-main.cjs",
			"backend/preload.js",
			"backend/urlopen.cjs",
			"backend/updater-notify.cjs",
			"backend/helpers/**/*",
			"build/**/*",
			"package.json"
		],
		"extraMetadata": {
			"main": "backend/electron-main.cjs"
		},
		"linux": {
			"target": [
				"AppImage",
				"rpm",
				"deb"
			],
			"category": "Utility",
			"icon": "src/lib/assets/silverr.svg"
		},
		"asar": true,
		"compression": "store"
	},
	"dependencies": {
		"archiver": "^7.0.1",
		"async-mutex": "^0.5.0",
		"clsx": "^2.1.1",
		"electron-log": "^5.4.3",
		"electron-updater": "^6.6.2",
		"express": "^5.1.0",
		"extract-zip": "^2.0.1",
		"jsonc-parser": "^3.3.1",
		"lucide-svelte": "^0.545.0",
		"node-fetch": "^3.3.2",
		"svelte-motion": "^0.12.2",
		"svelte-preprocess": "^6.0.3",
		"tailwind-merge": "^3.3.1"
	}
}
